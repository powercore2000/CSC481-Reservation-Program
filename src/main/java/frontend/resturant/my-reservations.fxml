<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.resturant.MyReservationsController"
            style="-fx-background-color: #f5f5f5;">
    <top>
        <HBox style="-fx-background-color: #c0392b; -fx-padding: 10 20;">
