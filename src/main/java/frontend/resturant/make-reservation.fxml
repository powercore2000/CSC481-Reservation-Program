<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.resturant.MakeReservationController"
            style="-fx-background-color: #f5f5f5;">
    <top>
        <HBox style="-fx-background-color: #c0392b; -fx-padding: 10 20;">
            <Label text="WEB Name" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER" style="-fx-padding: 30;">
            <Label text="Make Reservation" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <GridPane hgap="15" vgap="10">
                <Label text="Name:" GridPane.rowIndex="0" />
                <TextField fx:id="nameField" GridPane.columnIndex="1" />
                <Label text="Email:" GridPane.rowIndex="1" />
                <TextField fx:id="emailField" GridPane.columnIndex="1" />
                <Label text="Date:" GridPane.rowIndex="2" />
                <DatePicker fx:id="datePicker" GridPane.columnIndex="1" />
                <Label text="Time:" GridPane.rowIndex="3" />
                <TextField fx:id="timeField" GridPane.columnIndex="1" />
                <Label text="Party size:" GridPane.rowIndex="4" />
                <TextField fx:id="partyField" GridPane.columnIndex="1" />
            </GridPane>
            <Button text="Create Reservation"
                    onAction="#onCreateReservationClick"
                    style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />
        </VBox>
    </center>
</BorderPane>
