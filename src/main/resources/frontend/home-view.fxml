<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="main.java.frontend.HomeController"
            style="-fx-background-color: #f5f5f5;">
    <top>
        <VBox>
            <HBox spacing="10" alignment="CENTER_LEFT"
                  style="-fx-background-color: #c0392b; -fx-padding: 10 20;">
                <Label text="WEB Name"
                       style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />

                <Region HBox.hgrow="ALWAYS" />

                <!-- SIGN OUT BUTTON (hidden at first) -->
                <Button fx:id="signOutButton"
                        text="Sign Out"
                        visible="false"
                        style="-fx-background-color: white; -fx-text-fill: #c0392b; -fx-font-weight: bold; -fx-background-radius: 5;"
                        onAction="#onSignOutClick" />

                <!-- SIGN IN / PROFILE BUTTON -->
                <Button fx:id="signInButton" text="Sign In"
                        style="-fx-background-color: white; -fx-text-fill: #c0392b; -fx-font-weight: bold; -fx-background-radius: 5;"
                        onAction="#onSignInClick"/>
            </HBox>


            <Button fx:id="viewReservationButton"
                    text="View Reservation"
                    visible="false"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 5 15; -fx-translate-x: 20;"
                    onAction="#onViewReservationClick"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" alignment="TOP_CENTER" style="-fx-padding: 30;">
            <Label text="Restaurants" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <VBox spacing="10" alignment="CENTER">
                <Button text="Restaurant 1"
                        onAction="#onSelectRestaurant1"
                        style="-fx-background-color: white; -fx-pref-width: 400; -fx-pref-height: 40; -fx-border-color: #ddd;" />
                <Button text="Restaurant 2"
                        onAction="#onSelectRestaurant2"
                        style="-fx-background-color: white; -fx-pref-width: 400; -fx-pref-height: 40; -fx-border-color: #ddd;" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
