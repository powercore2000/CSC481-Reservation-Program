<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.resturant.MakeReservationController"
            style="-fx-background-color: #f5f5f5;">

    <top>
        <HBox style="-fx-background-color: #c0392b; -fx-padding: 10 20;" spacing="10">
            <Label text="WEB Name" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 30;">

            <HBox spacing="10">
                <Button text="←" style="-fx-font-size: 18px;" onAction="#onBackClick"/>
                <Button text="⌂" style="-fx-font-size: 18px;" onAction="#onHomeClick"/>
            </HBox>

            <Label text="Make Reservation" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <GridPane hgap="15" vgap="12">

                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="datePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Time:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="timeField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Party size:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="partyField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            </GridPane>

            <Button text="Create Reservation"
                    onAction="#onCreateReservationClick"
                    style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
        </VBox>
    </center>

</BorderPane>
